# vim:ft=plumed

ENVIRONMENTSIMILARITY ...
 SPECIES=1-216
 SIGMA=replace
 LATTICE_CONSTANTS=0.5431 # in nm
 CRYSTAL_STRUCTURE=DIAMOND
 LABEL=es
 MORE_THAN={RATIONAL R_0=0.5 NN=6 MM=12}
 MEAN
... ENVIRONMENTSIMILARITY

hh: HISTOGRAM ...
   DATA=es
   GRID_MIN=-0.5
   GRID_MAX=2
   GRID_BIN=1000 
   BANDWIDTH=0.01
...

DUMPGRID GRID=hh FILE=histo STRIDE=100 

PRINT STRIDE=1  ARG=* FILE=COLVAR
